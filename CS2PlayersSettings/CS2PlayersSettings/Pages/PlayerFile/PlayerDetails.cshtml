@page
@model CS2PlayersSettings.Pages.PlayerFile.PlayerDetailsModel
@{
}

<div class="container mx-auto px-4 py-6 max-w-4xl">
    <!-- 标题区域 -->
    <div class="mt-5 border-b border-gray-200 pb-2">
        <h1 class="text-2xl font-semibold text-gray-800">选手详情</h1>
    </div>

    <!-- 基本信息卡片 -->
    <div class="mt-6 bg-white shadow-md rounded-lg overflow-hidden">
        <div class="flex bg-gray-100 px-4 py-3 border-b border-gray-200">
            <div class="p-2">
                <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                </svg>
            </div>
            <div class="p-2">
                <h2 class="text-lg font-medium text-gray-700">@Model.Player.PlayerNickName 详细信息</h2>
            </div>
        </div>
        <div class="p-4">
            <table class="w-full table-auto border-collapse">
                <tbody>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手ID</td>
                        <td class="py-3 px-4 text-gray-800" id="playerId">@Model.Player.PlayerId</td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手姓名</td>
                        <td class="py-3 px-4 text-gray-800" id="playerNickName">@Model.Player.PlayerName</td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手昵称</td>
                        <td class="py-3 px-4 text-gray-800" id="playerName">@Model.Player.PlayerNickName</td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手封面</td>
                        <td class="py-3 px-4">
                            <img src="@Model.Player.PlayerCover" class="w-8 h-8 object-cover rounded" />
                        </td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手战队</td>
                        <td class="py-3 px-4 text-gray-800" id="playerAge">@Model.Player.PlayerTeam</td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">战队Logo</td>
                        <td class="py-3 px-4">
                            <img src="@Model.Player.PlayerTeamLogo" class="w-8 h-8 object-cover rounded" />
                        </td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">@(DateTime.Now.Year - 1)年TOP排行</td>
                        <td class="py-3 px-4 text-gray-800" id="playerScore">@Model.Player.PlayerTopRanking</td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手城市</td>
                        <td class="py-3 px-4 text-gray-800" id="playerCountry">@Model.Player.PlayerCountry</td>
                    </tr>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4 w-40 text-gray-600 font-medium">选手奖金(美金)</td>
                        <td class="py-3 px-4 text-gray-800" id="playerPrizeMoney">@Model.Player.PlayerPrizeMoney</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- 操作按钮 -->
    <div class="mt-6 flex justify-center gap-4">
        <a asp-page="PlayerInfoUpdate" asp-route-playerId="@Model.Player.PlayerId"
            class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded transition-colors">
            编辑
        </a>
        <a asp-page="PlayerGameSettings" asp-route-playerId="@Model.Player.PlayerId"
            class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded transition-colors">
            游戏设置
        </a>
        <button onclick="window.history.back()"
            class="inline-block bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded cursor-pointer transition-colors">
            返回
        </button>
    </div>
</div>
