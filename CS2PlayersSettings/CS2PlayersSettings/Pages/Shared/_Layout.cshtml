<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CS2PlayersSettings</title>
    <link href="~/css/output.css" rel="stylesheet" />
    <link href="~/css/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/js/sweetalert2.min.js"></script>
    <style>
        /* 高亮样式 */
        .nav-link.active {
            background-color: #e2e8f0;
            /* 浅灰色背景 */
            color: #2563eb;
            /* 蓝色文字 */
            font-weight: 500;
        }
    </style>
</head>

<body class="flex min-h-screen bg-gray-100">
    <!-- 左侧导航栏 -->
    <aside class="w-68 flex-shrink-0 bg-white shadow-lg">
        <!-- Logo区域 -->
        <div class="p-4 border-b">
            <div class="flex">
                <img src="/Image/CS2.jpg" class="w-5 h-5 mt-1" />
                <h1 class="text-xl font-bold text-gray-800 pl-3">CS2 Players Settings</h1>
            </div>
        </div>
        <!-- 导航菜单 -->
        <nav class="mt-2">
            <ul class="space-y-1 nav-item" id="nav-list">
                <li>
                    <a asp-page="/PlayerFile/Index"
                        class="nav-link flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        首页
                    </a>
                </li>
                <li>
                    <a asp-page="/PlayerFile/PlayerAdd"
                        class="nav-link flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" >
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
                        </svg>
                        新增选手
                    </a>
                </li>
                <li>
                    <a asp-page="/Demo/AnalysisDemoFile"
                        class="nav-link flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                        </svg>
                        Demo解析
                    </a>
                </li>
                <li>
                    <a asp-page="/ExcelImportD/ImportDataByExcel"
                        class="nav-link flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 transition-colors ">
                        <svg class="w-5 h-5 mr-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" >
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25M9 16.5v.75m3-3v3M15 12v5.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                        </svg>

                        导入数据
                    </a>
                </li>
                <li>
                    <a asp-controller="Settings" asp-action="Index"
                        class="nav-link flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 transition-colors">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        设置
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- 主内容区域 -->
    <main class="flex-1 p-6 bg-gray-200 ">
            @RenderBody()
    </main>
</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const navList = document.getElementById('nav-list');
        const navLinks = document.querySelectorAll('.nav-link');

        // 获取当前页面的 URL (假设你可以在 Razor 页面中访问当前的 URL)
        const currentUrl = window.location.pathname;

        // 设置默认选中或根据 URL 设置选中
        let activeFound = false;
        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentUrl) {
                link.classList.add('active');
                activeFound = true;
            }
        });

        // 如果没有找到匹配的 URL，则默认选中第一个
        if (!activeFound && navLinks.length > 0) {
            navLinks[0].classList.add('active');
        }


        // 点击事件处理
        navLinks.forEach(link => {
            link.addEventListener('click', function (event) {
                // 移除所有链接的 active 类
                navLinks.forEach(link => link.classList.remove('active'));

                // 给当前点击的链接添加 active 类
                this.classList.add('active');
            });
        });
    });
</script>
